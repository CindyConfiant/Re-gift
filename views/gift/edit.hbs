{{#if userInSession}}
<h1>Edit : "{{giftToEdit.name}}" </h1>

<form action="/mygifts/{{giftToEdit.id}}/edit" method="POST" enctype="multipart/form-data">

  <label>
      Name
      <input type="text" name="name" value="{{giftToEdit.name}}">
  </label>

  <label>
      Category
      <select multiple name="category">
        {{#each category}}
        <option value="{{name}}" {{#if selected}}selected="selected"{{/if}}>{{name}}</option>
        {{/each}}  
      </select>
  </label>

  <label>
      Brand
      <input type="text" name="brand" value="{{giftToEdit.brand}}">
  </label>

  <label>
      Description
      <textarea name="description"> {{giftToEdit.description}}
      </textarea>
  </label>

  <label>
        Picture
        <input type="file" name="picture" value="{{giftToEdit.picture}}"/>
    </label>

   <button>Edit</button>
  
</form>

<a href="/profile">Return to my profile</a>
{{else}}
  <p>Log in</p>
{{/if}}