{{#if userInSession}}

<div class="container-signup-form">

  <div class="box-signup-form">

    <h2>Add a new gift</h2>

    <form action="/mygifts/add" method="POST" enctype="multipart/form-data">

      <label>
        <div class="signup-tag">Gift name</div>
        <input class="signup-input" type="text" name="name">
      </label>

      <label>
        <div class="signup-tag">Category</div>
          <select id="newselect" multiple name="category">
            <option value="books">Books</option>
            <option value="boxes">Boxes</option>
            <option value="fragrances">Fragrances</option>
            <option value="toys">Toys</option>  
          </select>
      </label>

      <label>
        <div class="signup-tag">Brand</div>
        <input class="signup-input" type="text" name="brand">
      </label>

      <label>
        <div class="signup-tag">Description</div>
        <textarea name="description">
        </textarea>
      </label>

      <label>
        <div class="signup-tag">Picture</div>
        <input class="signup-input" type="file" name="picture"/>
      </label>
      
      <div>
      <button>Post it !</button>
      </div>

    </form>

    {{#if errorMessage}}
    <h3>{{errorMessage}}</h3>
    {{/if}}

  </div>
</div>


{{else}}
<div class="login">
<a href="/login">Please log-in or sign-up to start trading with our community !</a>
</div>
{{/if}}
