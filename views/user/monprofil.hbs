{{#if userInSession}} 
    <h2>{{userInSession.firstname}} {{userInSession.lastname}}</h2>
    <img src="{{userInSession.avatar}}" alt="userAvatar"/>
    <a href="/mygifts/add">Add a gift</a>
    <a href="/transactionsstatus">My barters</a>
    
    <div>
        <h3>My gifts list</h3>
        {{#each giftFromDb}}
          <img src="{{this.picture}}" alt="giftImg"/>
          <a href="/mygifts/{{id}}">{{name}}</a>
          <a href="/mygifts/{{id}}/edit">Update</a>
          
        {{/each}}
    </div>

{{else}}
    <p>Log in</p>
{{/if}}